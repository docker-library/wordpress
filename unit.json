{
	"listeners": {
		"*:80": {
			"pass": "routes"
		}
	},

	"routes": [
		{
			"match": {
				"uri": [
					"*.php",
					"*.php/*",
					"/wp-admin/"
				]
			},
			"action": {
				"pass": "applications/wordpress/direct"
			}
		},
		{
			"action": {
				"share": "/var/www/html$uri",
				"fallback": {
					"pass": "applications/wordpress/index"
				}
			}
		}
	],

	"applications": {
		"wordpress": {
			"type": "php",
			"targets": {
				"direct": {
					"root": "/var/www/html/"
				},
				"index": {
					"root": "/var/www/html/",
					"script": "index.php"
				}
			}
		}
	}
}
